{
  "name": "octant-mini",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "pnpm lint:sol && pnpm lint:prettier",
    "lint:sol": "solhint \"src/**/*.sol\"",
    "lint:prettier": "prettier --check \"{docs,frontend,script,test}/**/*.{md,js,ts,tsx,json}\"",
    "format": "pnpm format:sol && pnpm format:prettier",
    "format:sol": "forge fmt",
    "format:prettier": "prettier --write \"{docs,frontend,script,test}/**/*.{md,js,ts,tsx,json}\""
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "solhint": "^4.5.4"
  },
  "packageManager": "pnpm@9.14.4"
}
